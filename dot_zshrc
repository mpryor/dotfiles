export ZSH="$HOME/.oh-my-zsh"

ZSH_THEME="af-magic"
plugins=(
   git
)

export EDITOR="nvim"

source $ZSH/oh-my-zsh.sh

set -o vi

alias gs="git status"
alias gg="git graph"
alias cm="chezmoi" # Think: config manager...
alias lg="lazygit"
alias reload="source ~/.zshrc"
alias vi="nvim"
alias vim="nvim"
alias ls="eza -alh --color=auto --icons=always"

function zz() {
   cd $(zoxide query -l --exclude $(pwd) $1 | sort -k 1 -n | awk '{print $1}' | fzf)
}

function y() {
   local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
   yazi "$@" --cwd-file="$tmp"
   IFS= read -r -d '' cwd <"$tmp"
   [ -n "$cwd" ] && [ "$cwd" != "$PWD" ] && builtin cd -- "$cwd"
   rm -f -- "$tmp"
}

function ultimate-plumber() {
   BUFFER="$(up -c "${BUFFER}|")"
   CURSOR=$#BUFFER
}
zle -N ultimate-plumber
bindkey "^|" ultimate-plumber

zle -N y
bindkey "^y" y

eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
export PATH="${ASDF_DATA_DIR:-$HOME/.asdf}/shims:$PATH"
eval "$(zoxide init zsh)"
source <(fzf --zsh)
eval "$(atuin init zsh)"
source /home/linuxbrew/.linuxbrew/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh 
source /home/linuxbrew/.linuxbrew/share/zsh-autosuggestions/zsh-autosuggestions.zsh
# vim:ft=bash
